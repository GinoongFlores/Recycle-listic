<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_4"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
           <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/new_circle"
            android:layout_gravity="center"
            android:layout_marginTop="-380dp"
            android:layout_marginLeft="-100dp"
            android:layout_marginRight="-100dp"/>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="-150dp"
                android:layout_gravity="center"
                android:background="@drawable/logo"/>
            <TextView
                android:background="@drawable/title_tube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WHAT IS RECYLE'LISTIC?"
                android:fontFamily="@font/nunito_bold"
                android:padding="15dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="20dp"
                android:background="@drawable/home_container"
                android:fontFamily="@font/nunito_regular"
                android:paddingTop="20dp"
                android:text="Recycle'listic is an app developed for making segregation a fantastic thing to do. \n'' Recycle it Fantastically! \''"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp" />
            <TextView
                android:background="@drawable/title_tube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOLID WASTE MANAGEMENT"
                android:fontFamily="@font/nunito_bold"
                android:padding="10dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:fontFamily="@font/nunito_regular"
                android:paddingTop="20dp"
                android:layout_margin="20dp"
                android:background="@drawable/home_container"
                android:text="@string/solid_waste_management"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Different Types of Waste Segregation"
                android:fontFamily="@font/nunito_bold"
                android:padding="10dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/firstChannel"
                            android:clickable="true"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            android:background="@drawable/hazardous" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/secondChannel"
                            android:clickable="true"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            android:background="@drawable/recyclable" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/thirdChannel"
                            android:clickable="true"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:background="@drawable/bio" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/fourthChannel"
                            android:clickable="true"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:background="@drawable/general" />
                    </LinearLayout>

                </LinearLayout>


            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/se"
                android:gravity="left"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-20dp"
                android:text="CHARTGRAPHIC/Shutterstock"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:text="The Ecological Solid Waste Management Act of 2000"
                android:textSize="25dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/white"/>

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:layout_marginTop="10dp"
                android:id="@+id/youtube_player_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="10dp"
                app:autoPlay="false"
                app:showFullScreenButton="true"
                app:videoId="QGjPyPBpevY"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source: DENR12 Official"
                android:textSize="20dp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/container_layout_1"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="BE A MODEL TO THE COMMUNITY"
                android:textSize="20dp"
                android:fontFamily="@font/nunito_bolditalic"
                android:paddingTop="5dp"
                android:background="@drawable/rectangle_plain_white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>