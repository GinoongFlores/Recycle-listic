<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@color/green"
    android:orientation="vertical">
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/toolbar">

        <Button
            android:id="@+id/btnBackSignUp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/backbtn"
            android:clickable="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/nunito_regular"
                android:text="Create account"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/progressbar_signup"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:visibility="invisible" />


            <ImageView
                android:id="@+id/imageQRCode"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="-50dp"
                android:background="@drawable/logo" />

            <EditText
                android:id="@+id/etFullaname"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text_layout_1"
                android:hint="Fullname"
                android:maxLines="1"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etEmailSignUp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text_layout_1"
                android:hint="Email"
                android:maxLines="1"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etPasswordSignUp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text_layout_1"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etNumber"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text_layout_1"
                android:hint="Number"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/checkTerms"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="I accept the terms and agreements."
                android:textAllCaps="false"
                android:textSize="17dp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_layout_2"
                android:text="Create"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_marginBottom="15dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>