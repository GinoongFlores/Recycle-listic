<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.points.PointsFragment"
    android:background="@drawable/background_2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_circle"
                android:layout_gravity="center"
                android:layout_marginTop="-380dp"
                android:layout_marginLeft="-100dp"
                android:layout_marginRight="-100dp"/>
            <ImageView
                android:layout_marginTop="-120dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/points_logo"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:paddingBottom="100dp"
                android:layout_marginBottom="-20dp"
                android:background="@drawable/tube"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/se"
                    android:gravity="center"
                    android:text="POINTS SA BASURA"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/se"
                    android:gravity="center"
                    android:text="@string/craftingguide"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@drawable/new_warning"-->
<!--                    android:padding="15dp"-->
<!--                    android:text="''BE INVESTIGATIVE, REPORT IT!''"-->
<!--                    android:textAlignment="center"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="15dp"-->
<!--                    android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/se"
                    android:gravity="center"
                    android:text="000000 pts."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                   android:background="@drawable/container_white"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/btnShowQRCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/go_to"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:text="My QR Code"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/btnShowJunkLocations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/go_to"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Junk Converters"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/btnShowMaterials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/go_to"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Convertable Materials"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>